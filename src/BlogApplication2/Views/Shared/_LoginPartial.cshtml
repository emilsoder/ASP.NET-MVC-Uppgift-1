@using Microsoft.AspNetCore.Identity
@using BlogApplication2.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li id="mainMenuListItem" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Manage" ? "activeBtn" : "")">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Mina sidor</a>
            </li>
            <li id="mainMenuListItem">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logga ut</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li id="mainMenuListItem" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Register" ? "activeBtn" : "")">
            <a asp-area="" asp-controller="Account" asp-action="Register">Registrera</a>
        </li>
        <li id="mainMenuListItem" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "activeBtn" : "")">
            <a asp-area="" asp-controller="Account" asp-action="Login">Logga in</a>
        </li>
    </ul>
}
