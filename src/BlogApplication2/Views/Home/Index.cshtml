@{
    ViewData["Title"] = "Hem";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/carouselmedia/muscheln.jpg" class="img-responsive" />
        </div>

        <div class="item">
            <img src="~/carouselmedia/IMG_4030.png" class="img-responsive" />
        </div>

        <div class="item">
            <img src="~/carouselmedia/steak.jpg" alt="ASP.NET" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/carouselmedia/frenchfood.jpg" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />
<div class="row center-block">
    <div class="col-sm-4">
        <a asp-controller="BlogPosts" asp-action="Index">
            <div class="panel panel-default" style="padding:5px 5px">
                <h5 class="text-center">Matblogg</h5>
                <img src="~/Media/Chef .png" class="img-responsive img-circle center-block" />
            </div>
        </a>
    </div>
    <div class="col-sm-4">
        <a asp-controller="Manage" asp-action="Index">
            <div class="panel panel-default" style="padding:5px 5px">
                <h5 class="text-center">Mina sidor</h5>
                <img src="~/Media/user.png" class="img-responsive img-circle center-block" />
            </div>
        </a>
    </div>
    <div class="col-sm-4">
        <a asp-controller="Contact" asp-action="Index">
            <div class="panel panel-default" style="padding:5px 5px">
                <h5 class="text-center">Kontakt</h5>
                <img src="~/Media/msg.png" class="img-responsive img-circle center-block" />
            </div>
        </a>
    </div>
</div>

<style>
    .col-xs-4{
        float:inline-start;
    }
</style>