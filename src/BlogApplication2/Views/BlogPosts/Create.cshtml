@model BlogApplication2.Models.BlogPost
@using BlogApplication2.Models

@{
    ViewData["Title"] = "Nytt inlägg";
}

<h2>Lägg till</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Lägg till ett nytt recept på bloggen</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">Rubrik</label>
            <div class="col-md-10">
                <input asp-for="HeaderText" class="form-control" id="HeaderTextArea" onkeyup="TextCounter(this)" />
                <span asp-validation-for="HeaderText" class="text-danger" />
                <span id="headerCharCountLabel"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Brödtext</label>
            <div class="col-md-10">
                <textarea asp-for="BodyText" id="BodyTextArea" class="form-control" onkeyup="TextCounter2(this)"> </textarea>
                <span asp-validation-for="BodyText" class="text-danger" />
                <span id="bodyCharCountLabel" class="pull-right"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Kategori</label>
            <div class="col-md-10">
                <select asp-for="CategoryName" id="company" class="form-control">
                    @foreach (var item in ViewBag.categories)
                    {
                        <option>@item</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lägg till" class="btn btn-default" id="submitButton" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}